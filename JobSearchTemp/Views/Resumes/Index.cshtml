@model IEnumerable<JobSearch.Models.Resume>

@{
    ViewData["Title"] = "Index";
}

<h1>Resumes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.education)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.skills)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.education)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.skills)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ResumeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ResumeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ResumeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
